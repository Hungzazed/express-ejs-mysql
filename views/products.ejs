<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý sản phẩm</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    .product-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 4px;
    }
    .inventory-badge {
      font-size: 0.85em;
    }
    .filter-section {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Danh sách sản phẩm</h2>
      <% if (role === 'admin') { %>
        <a href="/products/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
      <% } %>
    </div>

    <!-- Thông báo -->
    <% if (error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Bộ lọc -->
    <div class="filter-section">
      <form method="GET" action="/products" class="row g-3">
        <div class="col-md-3">
          <label class="form-label">Tìm kiếm tên</label>
          <input type="text" 
                 class="form-control" 
                 name="search" 
                 placeholder="Nhập tên sản phẩm..." 
                 value="<%= filters.search || '' %>">
        </div>
        
        <div class="col-md-3">
          <label class="form-label">Danh mục</label>
          <select class="form-select" name="categoryId">
            <option value="">Tất cả</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat.categoryId %>" 
                      <%= filters.categoryId === cat.categoryId ? 'selected' : '' %>>
                <%= cat.name %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <div class="col-md-2">
          <label class="form-label">Giá từ</label>
          <input type="number" 
                 class="form-control" 
                 name="minPrice" 
                 placeholder="0" 
                 value="<%= filters.minPrice || '' %>">
        </div>
        
        <div class="col-md-2">
          <label class="form-label">Giá đến</label>
          <input type="number" 
                 class="form-control" 
                 name="maxPrice" 
                 placeholder="∞" 
                 value="<%= filters.maxPrice || '' %>">
        </div>
        
        <div class="col-md-2 d-flex align-items-end">
          <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-search"></i> Lọc
          </button>
        </div>
      </form>
    </div>

    <!-- Danh sách sản phẩm -->
    <% if (products && products.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Hình ảnh</th>
              <th>Tên sản phẩm</th>
              <th>Danh mục</th>
              <th>Giá</th>
              <th>Số lượng</th>
              <th>Trạng thái kho</th>
              <% if (role === 'admin') { %>
                <th>Thao tác</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { 
              const category = categories.find(c => c.categoryId === product.categoryId);
            %>
              <tr>
                <td>
                  <% if (product.url_image) { %>
                    <img src="<%= product.url_image %>" alt="<%= product.name %>" class="product-image">
                  <% } else { %>
                    <div class="product-image bg-secondary d-flex align-items-center justify-content-center text-white">
                      <i class="fas fa-image"></i>
                    </div>
                  <% } %>
                </td>
                <td>
                  <a href="/products/detail/<%= product.id %>" class="text-decoration-none">
                    <%= product.name %>
                  </a>
                </td>
                <td><%= category ? category.name : 'Chưa phân loại' %></td>
                <td><%= product.price.toLocaleString('vi-VN') %> đ</td>
                <td><%= product.quantity %></td>
                <td>
                  <% if (product.inventoryStatus === 'out_of_stock') { %>
                    <span class="badge bg-danger inventory-badge">
                      <i class="fas fa-times-circle"></i> Hết hàng
                    </span>
                  <% } else if (product.inventoryStatus === 'low_stock') { %>
                    <span class="badge bg-warning text-dark inventory-badge">
                      <i class="fas fa-exclamation-triangle"></i> Sắp hết
                    </span>
                  <% } else { %>
                    <span class="badge bg-success inventory-badge">
                      <i class="fas fa-check-circle"></i> Còn hàng
                    </span>
                  <% } %>
                </td>
                <% if (role === 'admin') { %>
                  <td>
                    <div class="btn-group" role="group">
                      <a href="/products/edit/<%= product.id %>" 
                         class="btn btn-sm btn-warning" 
                         title="Sửa">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form method="POST" 
                            action="/products/delete/<%= product.id %>" 
                            style="display:inline;" 
                            onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                        <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Phân trang -->
      <% if (pagination.totalPages > 1) { %>
        <nav>
          <ul class="pagination justify-content-center">
            <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
              <a class="page-link" 
                 href="?page=<%= pagination.currentPage - 1 %>&search=<%= filters.search || '' %>&categoryId=<%= filters.categoryId || '' %>&minPrice=<%= filters.minPrice || '' %>&maxPrice=<%= filters.maxPrice || '' %>">
                Trước
              </a>
            </li>
            
            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
              <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                <a class="page-link" 
                   href="?page=<%= i %>&search=<%= filters.search || '' %>&categoryId=<%= filters.categoryId || '' %>&minPrice=<%= filters.minPrice || '' %>&maxPrice=<%= filters.maxPrice || '' %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
            
            <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
              <a class="page-link" 
                 href="?page=<%= pagination.currentPage + 1 %>&search=<%= filters.search || '' %>&categoryId=<%= filters.categoryId || '' %>&minPrice=<%= filters.minPrice || '' %>&maxPrice=<%= filters.maxPrice || '' %>">
                Sau
              </a>
            </li>
          </ul>
        </nav>
        
        <div class="text-center text-muted">
          Tổng số: <%= pagination.totalItems %> sản phẩm
        </div>
      <% } %>
    <% } else { %>
      <div class="alert alert-info">
        Không tìm thấy sản phẩm nào.
        <% if (role === 'admin') { %>
          <a href="/products/add">Thêm sản phẩm đầu tiên</a>
        <% } %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
