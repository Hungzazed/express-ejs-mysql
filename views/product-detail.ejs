<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chi tiết sản phẩm - <%= product.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    .product-image-large {
      max-width: 100%;
      max-height: 400px;
      object-fit: contain;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/products">Sản phẩm</a></li>
        <li class="breadcrumb-item active"><%= product.name %></li>
      </ol>
    </nav>

    <div class="row">
      <div class="col-md-5">
        <div class="card">
          <div class="card-body text-center">
            <% if (product.url_image) { %>
              <img src="<%= product.url_image %>" 
                   alt="<%= product.name %>" 
                   class="product-image-large">
            <% } else { %>
              <div class="bg-secondary text-white d-flex align-items-center justify-content-center" 
                   style="height: 300px;">
                <i class="fas fa-image fa-5x"></i>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-md-7">
        <div class="card">
          <div class="card-header">
            <h3 class="mb-0"><%= product.name %></h3>
          </div>
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th style="width: 200px;">Giá:</th>
                  <td class="h5 text-primary"><%= product.price.toLocaleString('vi-VN') %> đ</td>
                </tr>
                <tr>
                  <th>Số lượng:</th>
                  <td><%= product.quantity %></td>
                </tr>
                <tr>
                  <th>Danh mục:</th>
                  <td><%= category ? category.name : 'Chưa phân loại' %></td>
                </tr>
                <tr>
                  <th>Trạng thái kho:</th>
                  <td>
                    <% if (product.inventoryStatus === 'out_of_stock') { %>
                      <span class="badge bg-danger">
                        <i class="fas fa-times-circle"></i> Hết hàng
                      </span>
                    <% } else if (product.inventoryStatus === 'low_stock') { %>
                      <span class="badge bg-warning text-dark">
                        <i class="fas fa-exclamation-triangle"></i> Sắp hết (còn <%= product.quantity %>)
                      </span>
                    <% } else { %>
                      <span class="badge bg-success">
                        <i class="fas fa-check-circle"></i> Còn hàng
                      </span>
                    <% } %>
                  </td>
                </tr>
                <tr>
                  <th>Ngày tạo:</th>
                  <td><%= new Date(product.createdAt).toLocaleString('vi-VN') %></td>
                </tr>
              </tbody>
            </table>

            <% if (role === 'admin') { %>
              <div class="d-flex gap-2 mt-3">
                <a href="/products/edit/<%= product.id %>" class="btn btn-warning">
                  <i class="fas fa-edit"></i> Sửa
                </a>
                <form method="POST" 
                      action="/products/delete/<%= product.id %>" 
                      onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                  <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xóa
                  </button>
                </form>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Product Logs -->
    <% if (logs && logs.length > 0) { %>
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-history"></i> Lịch sử thao tác</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Thời gian</th>
                  <th>Hành động</th>
                  <th>User ID</th>
                </tr>
              </thead>
              <tbody>
                <% logs.forEach(log => { %>
                  <tr>
                    <td><%= new Date(log.time).toLocaleString('vi-VN') %></td>
                    <td>
                      <% if (log.action === 'CREATE') { %>
                        <span class="badge bg-success">Tạo mới</span>
                      <% } else if (log.action === 'UPDATE') { %>
                        <span class="badge bg-info">Cập nhật</span>
                      <% } else if (log.action === 'DELETE') { %>
                        <span class="badge bg-danger">Xóa</span>
                      <% } %>
                    </td>
                    <td><%= log.userId %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
